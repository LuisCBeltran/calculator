doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        
        title Calculator
    body 
        main 
            .calculator
                .display
                        p.display-nums#displayNums 0
                button x²
                button x³
                button DEL
                button AC
                button ²√x
                button %
                button π
                button(onclick="operation(4)") /
                button#number7(onclick="pushNumber(7)") 7
                button#number8(onclick="pushNumber(8)") 8
                button#number9(onclick="pushNumber(9)") 9
                button(onclick="operation(3)") *
                button#number4(onclick="pushNumber(4)") 4
                button#number5(onclick="pushNumber(5)") 5
                button#number6(onclick="pushNumber(6)") 6
                button.plus#plus(onclick="operation(1)") +
                button#number1(onclick="pushNumber(1)") 1
                button#number2(onclick="pushNumber(2)") 2
                button#number3(onclick="pushNumber(3)") 3
                button .
                button#number4(onclick="pushNumber(0)") 0
                button =
                button(onclick="operation(2)") -
        script(src="script.js")

